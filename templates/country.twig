{% extends 'main.twig' %}

{% block main %}
    <table>
        <tr>
            <th><a href="?orderBy=Name">Name</a></th>
            <th><a href="?orderBy=Code">Code</a></th>
            <th><a href="?orderBy=Continent">Continent</a></th>
            <th><a href="?orderBy=Region">Region</a></th>
            <th><a href="?orderBy=Captial">Capital</a></th>
            <th><a href="?orderBy=SurfaceArea">Surface Area</a></th>
            <th><a href="?orderBy=Population">Population</a></th>
            <th>Language</th>
        </tr>
        {% for country in countries %}
            <tr>
                <td>{{ country.Name }}</td>
                <td>{{ country.Code }}</td>
                <td><a href="?continent={{ country.Continent }}">{{ country.Continent }}</a></td>
                <td>{{ country.Region }}</td>
                <td>{{ country.Capital }}</td>
                <td>{{ country.SurfaceArea }}</td>
                <td>{{ country.Population }}</td>
                <td><a href="language.php?code={{ country.Code }}">Languages</a></td>
            </tr>
        {%  else %}
            No countries have been found.
        {% endfor %}
    </table>
{% endblock %}