{% extends 'main.twig' %}

{% block main %}
    <div>
        <ul class="list-inline">
            <li>Show: </li>
            <li><a href="?orderBy=TotalSpeakers">All</a></li>
            <li><a href="?limit=100&orderBy=Speakers">Top 100</a></li>
            <li><a href="?limit=50&orderBy=Speakers">Top 50</a></li>
            <li><a href="?limit=20&orderBy=Speakers">Top 20</a></li>
            <li><a href="?limit=10&orderBy=Speakers">Top 10</a></li>
        </ul></div>
    <table class="table table-striped table-bordered table-hover table-sm table-responsive">
        <thead class="thead-inverse">
        <tr>
            <th><a href="?orderBy=Language">Language</a></th>
            <th><a href="?orderBy=TotalSpeakers">Speakers</a></th>
        </tr>
        </thead>
        <tbody>
        {% for language in languages %}
            <tr>
                <td>{{ language.Language }}</td>
                <td>{{ language.Speakers }}</td>
            </tr>
        {%  else %}
            No languages have been found.
        {% endfor %}
        </tbody>
    </table>
{% endblock %}